<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        tools:text="name"
        android:id="@+id/studentMarkingName"
        android:textColor="@color/student_name"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/yearOfBirth"
        android:layout_alignBottom="@+id/yearOfBirth"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/studentMarkingId"
        android:textColor="@color/student_id"
        android:layout_below="@id/studentMarkingName"
        android:layout_width="match_parent"
        tools:text="ID"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />


        <TextView
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:id="@+id/tvViewMark"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            tools:text="9.5"
            android:textSize="15sp"
            android:textColor="#000000"/>

    <TextView
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvViewMark"
        android:id="@+id/tvStudentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        tools:text="Good"
        android:textSize="15sp"
        android:textColor="#F1390C"/>


</RelativeLayout>