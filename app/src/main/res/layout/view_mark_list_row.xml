<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        tools:text="name"
        android:id="@+id/studentMarkingName"
        android:textColor="@color/student_name"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/yearOfBirth"
        android:layout_alignBottom="@+id/yearOfBirth"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/studentMarkingId"
        android:textColor="@color/student_id"
        android:layout_below="@id/studentMarkingName"
        android:layout_width="match_parent"
        tools:text="ID"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtViewMark"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:inputType="none"
            android:typeface="monospace" />
    </android.support.design.widget.TextInputLayout>


</RelativeLayout>